  "type": "commonjs",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm",
    "migrate:run": "yarn build && node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:run --dataSource dist/database/data-source.js",
    "migrate:generate": "yarn build && yarn typeorm migration:generate src/migrations/MigrateReservationsToUsers --dataSource dist/database/data-source.js",
    "migrate:revert": "yarn typeorm migration:revert --dataSource dist/database/data-source.js",
    "create:admin": "ts-node src/scripts/create-admin.ts"
  },
